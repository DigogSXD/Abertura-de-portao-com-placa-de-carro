import cv2
import easyocr
import matplotlib.pyplot as plt
from google.colab import files
from IPython.display import Image, display

# --- CONFIGURAÇÃO ---
# Lista de placas autorizadas (Simulando o banco de dados dos moradores)
# Coloque tudo em maiúsculo e sem traços para facilitar a comparação
PLACAS_AUTORIZADAS = ["GAE0244", "PLQ8F28", "QRM7E33"]

def processar_imagem_portao():
    # Inicializa o leitor (baixa o modelo na primeira vez)
    reader = easyocr.Reader(['en'], gpu=False) # 'en' funciona bem para placas

    print("--- SIMULAÇÃO DE CÂMERA DE PORTÃO ---")
    print("Por favor, faça o upload da foto do carro:")

    # Widget para upload da imagem no Colab
    uploaded = files.upload()

    for filename in uploaded.keys():
        # Carrega a imagem
        img = cv2.imread(filename)
        img_rgb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)

        # Realiza a leitura (OCR)
        print("Analisando imagem... aguarde.")
        result = reader.readtext(img)

        placa_detectada = None
        confianca_leitura = 0

        # Desenhar retângulo e texto na imagem
        for (bbox, text, prob) in result:
            # Limpeza básica: remove espaços e traços
            texto_limpo = text.upper().replace(" ", "").replace("-", "")

            # Lógica simples: Placas BR tem 7 caracteres
            if len(texto_limpo) == 7:
                placa_detectada = texto_limpo
                confianca_leitura = prob

                # Desenha o box verde na imagem
                (top_left, top_right, bottom_right, bottom_left) = bbox
                top_left = tuple(map(int, top_left))
                bottom_right = tuple(map(int, bottom_right))
                cv2.rectangle(img_rgb, top_left, bottom_right, (0, 255, 0), 5)
                break # Assume que achou a placa principal

        # Mostra a imagem processada
        plt.figure(figsize=(10,6))
        plt.imshow(img_rgb)
        plt.axis('off')
        plt.show()

        # --- AÇÃO DO PORTÃO ---
        print("-" * 30)
        if placa_detectada:
            print(f"PLACA LIDA: {placa_detectada} (Confiança: {confianca_leitura:.2f})")

            if placa_detectada in PLACAS_AUTORIZADAS:
                print("✅ STATUS: ACESSO PERMITIDO")
                print(">>> ENVIANDO SINAL PARA ABRIR O PORTÃO... <<<")
            else:
                print("❌ STATUS: ACESSO NEGADO (Placa não cadastrada)")
        else:
            print("⚠️ STATUS: NENHUMA PLACA IDENTIFICADA NA IMAGEM")
        print("-" * 30)

# Executar a função
processar_imagem_portao()
